{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "allowJs": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist/node",
    "isolatedModules": false
  },
  "include": [
    "vite.config.js",
    "postcss.config.js",
    "tailwind.config.js"
  ]
} 
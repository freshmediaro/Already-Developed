{
    "name": "os-desktop-app/backend",
    "type": "project",
    "description": "OS-style desktop application backend with multi-tenancy and file management",
    "keywords": [
        "laravel",
        "framework",
        "multi-tenant",
        "elfinder",
        "file-management",
        "cloudflare-r2"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "laravel/vue-starter-kit": "main",
        "laravel/sanctum": "^4.0",
        "stancl/tenancy": "^4.0",
        "barryvdh/laravel-elfinder": "^0.5.3",
        "league/flysystem": "^3.0",
        "league/flysystem-aws-s3-v3": "4.x",
        "vidwanco/tenant-buckets": "dev-tenancy-v4",
        "inertiajs/inertia-laravel": "^1.0",
        "tightenco/ziggy": "^2.0",
        "spatie/laravel-permission": "^6.0",
        "spatie/laravel-activitylog": "^4.8",
        "spatie/laravel-media-library": "^11.0",
        "bavix/laravel-wallet": "^10.0",
        "omnipay/omnipay": "^3.0",
        "omnipay/stripe": "^3.0",
        "omnipay/paypal": "^3.0",
        "laravel/cashier": "^15.0",
        "spatie/laravel-webhook-client": "^3.0",
        "rawilk/laravel-settings": "^3.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0",
        "phpunit/phpunit": "^11.0",
        "spatie/laravel-ignition": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/vidwanco/tenant-buckets"
        }
    ]
} 